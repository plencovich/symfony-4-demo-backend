{% extends "@FOSUser/layout.html.twig" %}
{% block body %}
<div class="middle-box text-center loginscreen animated fadeInDown">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-content">
                <img class="img-responsive center-block img-fluid" src="{{asset('build/images/grupotodo-logo.png')}}" alt="">
                <form class="m-t" role="form"action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                    {% if error %}
                        <div id="alertNotification" class="alert bg-danger">
                       {{ error.messageKey|trans(error.messageData, 'security') }}
                       </div>
                    {% endif %}
                    <div class="form-group" id="identity">
                        <input type="text" id="username" name="_username" class="form-control" placeholder="Usuario" required="" autofocus>
                    </div>
                    <div class="form-group" id="password">
                        <input type="password" id="password" name="_password" class="form-control" placeholder="ContraseÃ±a" required="">
                    </div>
                    <button type="submit" id="_submit" name="_submit" class="btn btn-primary full-width m-b btnSubmit"><i class="fas fa-sign-in-alt fa-fw"></i> Ingresar</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
