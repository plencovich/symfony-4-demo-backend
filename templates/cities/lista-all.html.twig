{% extends 'base.html.twig' %}
{% block title %}
    {{page_title_base}}{{page_info.title}}
{% endblock %}
{% block breadcrumb %}
    {% embed 'layouts/breadcrumb.html.twig' %}
        {% block btnBreadcrumb %}
            <a href="{{path('cities_new')}}" class="btn btn-primary" data-toggle="tooltip" title="Agregar Ciudad"><i class="fa fa-user-plus fa-fw"></i> Ciudad</a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Listado de Ciudades</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables" data-filename="ciudades-listados">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>CÃ³digo Postal</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for city in cities %}
                                        <tr>
                                            <td>{{ city.name }}</td>
                                            <td>{{ city.codpos }}</td>
                                            <td>
                                                <a href="{{ path('cities_edit', {'id': city.id}) }}">
                                                    <button class="btn btn-info btn-xs" type="button"><i class="fa fa-edit fa-fw"></i></button>
                                                </a>
                                            </td>
                                        </tr>
                                    {%endfor%}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
