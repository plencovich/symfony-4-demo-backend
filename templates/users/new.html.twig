{% extends 'base.html.twig' %}
{% block title %}
    {{page_title_base}}
    {{page_info.title}}
{% endblock %}
{% block breadcrumb %}
    {% embed 'layouts/breadcrumb.html.twig' %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Agregar usuario<small>
                                Completar todos los campos</small>
                        </h5>
                    </div>
                    <div class="ibox-content">
                        {{ form_start(form) }}
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Nombre completo</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.full_name) }}
                            </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Usuario</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.username) }}
                            </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Correo</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Clave</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.plainPassword) }}
                            </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Tipo de cuenta</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.roles) }}
                            </div>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-2 col-form-label">Estado</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.enabled) }}
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a href="{{ path('users_list') }}" class="btn btn-white btn-sm" role="button">Cancelar</a>
                                {{form_widget(form.guardar)}}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
