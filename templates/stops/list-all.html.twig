{% extends 'base.html.twig' %}
{% block title %}
    {{page_title_base}}{{page_info.title}}
{% endblock %}
{% block breadcrumb %}
    {% embed 'layouts/breadcrumb.html.twig' %}
        {% block btnBreadcrumb %}
            <a href="{{path('stops_new')}}" class="btn btn-primary" data-toggle="tooltip" title="Agregar Parada"><i class="fa fa-user-plus fa-fw"></i> Parada</a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Listado de Paradas</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables" data-filename="ciudades-listados">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Codigo</th>
                                        <th>Direcci√≥n</th>
                                        <th>Orden</th>
                                        <th>Tiempo</th>
                                        <th>Tarifa</th>
                                        <th>Tarjeta</th>
                                        <th>Punto Fijo</th>
                                        <th>Compra Online</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for stop in stops %}
                                    <tr>
                                        <td>{{ stop.id }}</td>
                                        <td>{{ stop.name }}</td>
                                        <td>{{ stop.keyname }}</td>
                                        <td>{{ stop.address }}</td>
                                        <td>{{ stop.position }}</td>
                                        <td>{{ stop.timeTrip }}</td>
                                        <td>{{ stop.price }}</td>
                                        <td>{{ stop.priceCard }}</td>
                                        <td>{{ stop.fixedPoint }}</td>
                                        <td>{%if stop.buyOnline == 1%}
                                                <i class="fa fa-check-circle text-success fa-fw"></i>
                                            {%else%}
                                                <i class="fa fa-times-circle text-danger fa-fw"></i>
                                            {%endif%}</td>
                                        <td>
                                            <a href="{{ path('stops_edit', {'id': stop.id}) }}">
                                                <button class="btn btn-info btn-xs" type="button"><i class="fa fa-edit fa-fw"></i></button>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
