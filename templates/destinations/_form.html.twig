{{ form_start(form) }}
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">Tipo de Destino</label>
        <div class="col-sm-3">
            {{ form_widget(form.type, { 'attr': {'class': 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-4">{{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">Nombre de Venta</label>
        <div class="col-sm-4">{{ form_widget(form.name_sales, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">CNRT Nombre</label>
        <div class="col-sm-4">{{ form_widget(form.cnrt_name, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">CNRT Código</label>
        <div class="col-sm-4">{{ form_widget(form.cnrt_code, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">Hora de Salida</label>
        <div class="col-sm-4">{{ form_widget(form.cnrt_hour_start, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="form-group  row">
        <label class="col-sm-2 col-form-label">Duración</label>
        <div class="col-sm-4">{{ form_widget(form.cnrt_duration, { 'attr': {'class': 'form-control'} }) }}</div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group row">
        <div class="col-sm-4 col-sm-offset-2">
            <a href="{{ path('destinations_list') }}" class="btn btn-white btn-sm" role="button">Cancelar</a>
            <button class="btn btn-primary btn-sm">Guardar</button>
        </div>
    </div>
{{ form_end(form) }}
