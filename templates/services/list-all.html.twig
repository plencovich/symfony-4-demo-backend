{% extends 'base.html.twig' %}
{% block title %}
    {{page_title_base}}{{page_info.title}}
{% endblock %}
{% block breadcrumb %}
    {% embed 'layouts/breadcrumb.html.twig' %}
        {% block btnBreadcrumb %}
            <a href="{{path('create_new_service')}}" class="btn btn-primary" data-toggle="tooltip" title="Agregar Servicio"><i class="fa fa-user-plus fa-fw"></i> Servicios</a>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}
    <div class="wrapper wrapper-content animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Listado de Destinos</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables" data-filename="destinos-listados">
                                <thead>
                                    <tr>
                                        <th>Categoria</th>
                                        <th>Fecha y Hora</th>
                                        <th>Origen</th>
                                        <th>Destino</th>
                                        <th>Tarifa fija</th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for service in services %}
                                        <tr>
                                            <td>{{ service.categoryid.name }}</td>
                                             <td> {{ service.timeanddate }}</td>
                                              <td>{{ service.origin.name }} </td>
                                               <td>{{ service.destination.name}} </td>
                                               <td>{{ service.fixedfee}} </td>
                                            <td>
                                                <a href="#{#{ path('destinations_edit', {'id': destination.id}) }#}">
                                                    <button class="btn btn-info btn-xs" type="button"><i class="fa fa-edit fa-fw"></i></button>
                                                </a>
                                            </td>
                                        </tr>
                                    {%endfor%}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
